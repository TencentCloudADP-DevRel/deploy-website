{
  "openapi": "3.0.0",
  "info": {
    "title": "Deploy 3D Website API",
    "version": "1.0.0",
    "description": "部署 3D 网页的 API 服务"
  },
  "servers": [
    {
      "url": "http://157.20.105.56:3007"
    }
  ],
  "paths": {
    "/api/deploy-3d-website": {
      "post": {
        "summary": "部署 3D 展示网页",
        "tags": ["Deployment"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["cosUrl"],
                "properties": {
                  "cosUrl": {
                    "type": "string",
                    "example": "https://adp-1358396436.cos.ap-singapore.myqcloud.com/3d_models/shenzhen_model.glb"
                  },
                  "filename": {
                    "type": "string",
                    "example": "my-3d-model"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "部署成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "filename": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
